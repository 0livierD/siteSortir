{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}



    <div class="hero">
        <h1>Sortir avec Eni</h1>
        <div class="filtre">

            {{ form_start(filtreForm,{'attr': {'class': 'filtreForm form-floating'}}) }}
            <div class="" id="filtreGauche">
                {{ form_row(filtreForm.site) }}
                {{ form_row(filtreForm.nom,{'label':'Par nom'} ) }}
                {{ form_row(filtreForm.dateDebut) }}
                {{ form_row(filtreForm.dateFin) }}
            </div>

        </div>
        <div class="col-md-4" id="filtreDroit">
            {{ form_row(filtreForm.sortieQueJOrganise, {'label': "Où j'organise"}) }}
            {{ form_row(filtreForm.sortieOuJeParcitipe,{'label': "Où je participe"}) }}
            {{ form_row(filtreForm.sortieOuJeNeParticipePas,{'label': "Où je ne participe pas"}) }}
            {{ form_row(filtreForm.sortiePassee,{'label': "Passées"}) }}
            <div>
                <button type="submit" class=" btn buttonBlancBleu">Filtrer</button>
            </div>
        </div>

        {{ form_end(filtreForm) }}

    </div>
    <div>


    <h2 class="h2Accueil">Liste des sorties</h2>
    </div>

    <div class="listSortie">

        {% for sortie in sorties %}
            {#
            Savoir si l'utilisateur connecté est participant ou non, organisateur ou non
            #}
            {% set boutonCardSortie = sortie.getEtat.getlibelle %}
            {% set nbParticipant = sortie.participants|length %}

            {% if boutonCardSortie != "Passée" and boutonCardSortie != "En cours" and sortie.getEtat.getlibelle != "Annulée" %}
                {% if sortie.nbInscriptionMax == nbParticipant  %}

                    {% set boutonCardSortie = "Complet" %}
                {% endif %}
                {% for participant in sortie.participants %}
                    {% if app.user.id == participant.id %}
                        {% set boutonCardSortie = "Se desister" %}
                    {% endif %}
                {% endfor %}
                {% if sortie.organisateur == app.user %}
                    {% set boutonCardSortie = "Annuler sortie" %}
                {% endif %}
                {% if boutonCardSortie == sortie.getEtat.getlibelle and boutonCardSortie != "Clôturée" %}
                    {% set boutonCardSortie = "S'inscrire" %}
                {% endif %}
            {% endif %}

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ sortie.nom }}</h4>
                    <div class="date">
                        <h6 class="card-subtitle mb-2 text-muted"> Le {{ sortie.dateHeureDebut |date('d/m/y H:i') }}</h6>
                        <h6 class="card-subtitle mb-2 text-muted"> Durée: {{ sortie.duree }} min</h6>
                    </div>
                    <div class="date">
                        <h6 class="card-subtitle mb-2 text-muted"> Places disponibles
                            : {{ sortie.nbInscriptionMax - sortie.participants|length }}</h6>

                    </div>
                    <h6 class="card-subtitle mb-2 text-muted"> Statut
                        : {{ sortie.etat.libelle }}</h6>
                    <div class="date">
                        <h6>Organisateur : <a href="{{ path('app_user_show',{'id':sortie.organisateur.id}) }}"
                                              class="card-link">{{ sortie.organisateur.getFullName }}</a></h6>
                    </div>
                    <div class="date d-flex justify-content-between">
                        <a class="mt-3 " href="{{ path('app_sortie_show', {'id':sortie.getId()}) }}">Plus d'infos</a>
                        {% if boutonCardSortie == "S'inscrire" %}
                            <a class="btn buttonBleuVert" href="{{ path('app_sortie_inscription', {'id': sortie.id}) }}"
                               class="card-link" >{{ boutonCardSortie }}</a>
                        {% elseif boutonCardSortie == "Se desister" %}
                            <a class="btn buttonBlancBleu " href="{{ path('app_sortie_desistement', {'id': sortie.id}) }}"
                               class="card-link">{{ boutonCardSortie }}</a>
                        {% elseif boutonCardSortie == "Annuler sortie" %}
                            <a class="btn buttonBlancRouge" href="{{ path('app_sortie_annuler', {'id': sortie.id}) }}" class="card-link" id="annulerSortie">{{ boutonCardSortie }}</a>
                        {% elseif boutonCardSortie == "Complet" %}
                            <button type="button" class="btn buttonGris" href="" class="card-link"
                                    id="completSortie">{{ boutonCardSortie }}</button>
                        {% else %}
                            <button type="button" class="btn buttonGris" href="" class="card-link"
                                    id="completSortie">{{ boutonCardSortie }}</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
