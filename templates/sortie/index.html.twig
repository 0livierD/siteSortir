    <h1>Sortir avec Eni</h1>

    <h2 class="h2Accueil">Filtres</h2>

    <div class="pageNavigation">
        <div class="filtre">
            <div class="card">
                <div class="card-body">
                    {{ form_start(filtreForm,{'attr': {'class': 'filtreForm form-floating'}}) }}
                    <div class="col-md-8" id="filtreGauche">
                        {{ form_row(filtreForm.site) }}
                        {{ form_row(filtreForm.nom) }}
