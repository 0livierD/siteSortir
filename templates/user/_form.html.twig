<div class="profil">
    {{ form_start(form) }}

    <div class="form-group row">
        <label for="{{ form.email.vars.id }}" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            {{ form_widget(form.email, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="{{ form.nom.vars.id }}" class="col-sm-2 col-form-label">Nom:</label>
        <div class="col-sm-4">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>

        <label for="{{ form.prenom.vars.id }}" class="col-sm-2 col-form-label">Prénom:</label>
        <div class="col-sm-4">
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="{{ form.pseudo.vars.id }}" class="col-sm-2 col-form-label">Pseudo:</label>
        <div class="col-sm-10">
            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="{{ form.telephone.vars.id }}" class="col-sm-2 col-form-label">Téléphone:</label>
        <div class="col-sm-10">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="{{ form.photoFile.vars.id }}" class="col-sm-2 col-form-label">Photo:</label>
        <div class="col-sm-10">
            {{ form_widget(form.photoFile, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

   <div class="form-group row">
        <label for="{{ form.plainPassword.vars.id }}" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-12">
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="{{ form.password.vars.id }}" class="col-sm-4 col-form-label"> Mot de passe actuel:</label>
        <div class="col-sm-12">
            {{ form_widget(form.password, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>


    {{ form_end(form) }}
</div>

<div class="mt-4">
    <button class="btn buttonBleuVert mr-3">{{ button_label|default('Save') }}</button>
</div>
