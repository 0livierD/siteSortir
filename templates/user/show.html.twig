{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <h1 class="display-4 text-center mt-4 mb-5">Profil</h1>
    <div class="flexEnColonne">
        <div class="flex" >
                <div class="col-md-6 mx-auto">
                    <p>Pseudo : </p>
                    <p>{{ user.pseudo }}</p>
                </div>
                <div class="col-md-6 mx-auto">
                    <p>image</p>
                </div>
        </div>
        <div class="flex" >
            <div class="col-md-6 mx-auto">
                <p>Prénom : </p>
                <p>{{ user.prenom }}</p>
            </div>
            <div class="col-md-6 mx-auto">
                <p>Nom : </p>
                <p>{{ user.nom }}</p>
            </div>
        </div>
        <div class="flex" >
            <div class="col-md-6 mx-auto">
                <p>Email : </p>
                <p>{{ user.email }}</p>
            </div>
            <div class="col-md-6 mx-auto">
                <p>Téléphone : </p>
                <p>{{ user.telephone }}</p>
            </div>
        </div>
        <div>
            <p>Site de rattachement : </p>
            <p>{{ user.site.nom }}</p>
        </div>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    </div>

{% endblock %}
