{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="login">
        <h1>Connexion</h1>
        <form method="post">
            {% if error %}
                {% if error.message=='Your user account no longer exists.' %}
                    <div class="alert alert-danger">Votre compte n'est pas activé. Merci de contacter l'administrateur
                        du site
                    </div>
                {% endif %}


            {% endif %}


            <label class="marginTop40" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" autofocus>


                <label class="marginTop20" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            <div class="logButton">
                <button class="btn  btn-primary " style="width: 30%" type="submit">
                    Se connecter
                </button>
            </div>

            <label>
                <input type="checkbox" name="_remember_me" checked>
                Se souvenir de moi
            </label>
            <a class="" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>


        </form>
    </div>
{% endblock %}
